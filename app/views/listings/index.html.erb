<h1>Head crafted items from all around the world</h1>
<h2>Discover one-of-kind Item</h2>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-sm-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <!--<%= image_tag listing.image.url %>-->
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>

